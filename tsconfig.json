{
  "compilerOptions": {
    "outDir": "build",
    "module": "CommonJS",
    "declaration": true,
    "target": "ES2018",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "test/fixtures"
  ]
}
